@model E_LearningProject.Models.Course

@{
    ViewData["Title"] = "Course Information";
}

<style>
    body {
        background-color: #f4f4f4; /* Light background color */
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .course-info-container {
        background-color: white; /* White background for content */
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        margin-top: 50px; /* Add some top margin */
        background-image: url('~/path/to/your/image.jpg'); /* Replace with your image path */
        background-size: cover; /* Adjust how the image covers the background */
        background-position: center; /* Position the image in the center */
        background-repeat: no-repeat; /* Prevent the image from repeating */
    }

    .accordion-body {
        background-color: rgba(255, 255, 255, 0.8); /* Slightly transparent white background */
        padding: 15px;
        border-radius: 8px;
        margin-bottom: 20px;
    }

    dt {
        font-weight: bold;
    }
</style>

<div class="container course-info-container">
    <h1 class="text-center mb-4">@ViewData["Title"]</h1>

    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Course Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CourseName)
        </dd>
        <dt class="col-sm-2">
            Category
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.category.Category_Name)
        </dd>
        <dt class="col-sm-2">
            Instructor
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Instructor)
        </dd>
        <dt class="col-sm-2">
            Course Link
        </dt>
        <dd class="col-sm-10">
            <a href="@Html.DisplayFor(model => model.Link)" target="_blank">Click Here To View The Course</a>
        </dd>
    </dl>
</div>

<div class="container mt-3">
    <a asp-action="Index" asp-controller="Couerse" class="btn btn-secondary">Back to Courses</a>
</div>
